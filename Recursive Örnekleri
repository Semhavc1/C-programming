long fibonacci(int x)//5
{
     if(x==1 || x==0 )
        return 1;

    return fibonacci(x-1)+fibonacci(x-2);
}
int main()
{
    int sayi;
    for (sayi=0;sayi<15;sayi++)
    printf("%d  %li\n",sayi+1,fibonacci(sayi));
    return 0;
}
